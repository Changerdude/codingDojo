<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Razor Fun</title>
</head>
<body>
    <div class="container bg-dark text-light p-3 my-4 rounded shadow">
        <h1 class="text-center">Here are some delicious foods!</h1>
        @{
            List<string> foods = new List<string>() {"Apple Pie" , "Pizza", "Cinnamon Rolls", "Lasagna", "Donuts", "Chocolate Cake", "Burritos"};
                foreach (string food in foods)
                {
                    if(Char.ToUpper(food.ElementAt(0)) == 'C'){
                        <p class="text-danger">@food</p>
                    } else {
                        <p>@food</p>
                    }
                }
        }
    </div>
</body>
</html>