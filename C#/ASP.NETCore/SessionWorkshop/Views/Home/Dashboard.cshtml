@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center w-50 mx-auto">
<h1 class="mb-4">@Context.Session.GetInt32("Num")</h1>
<div class="d-flex justify-content-evenly mb-4">
    <form asp-action="Math" asp-controller="Home" method="post">
        <input type="hidden" name="Op" value="+1">
        <button class="btn btn-warning" style="height: 150px; width: 150px;">+ 1</button>
    </form>
    <form asp-action="Math" asp-controller="Home" method="post">
        <input type="hidden" name="Op" value="-1">
        <button class="btn btn-primary" style="height: 150px; width: 150px;">- 1</button>
    </form>
</div>
<div class="d-flex justify-content-evenly">
    <form asp-action="Math" asp-controller="Home" method="post">
        <input type="hidden" name="Op" value="x2">
        <button class="btn btn-danger" style="height: 150px; width: 150px;">x 2</button>
    </form>
    <form asp-action="Math" asp-controller="Home" method="post">
        <input type="hidden" name="Op" value="+R">
        <button class="btn btn-success" style="height: 150px; width: 150px;">+ Random</button>
    </form>
</div>
</div>