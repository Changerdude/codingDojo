@{
    ViewData["Title"] = "Details";
}

@model FormData

<div class="container rounded shadow bg-dark text-light p-4 my-3">
    <h1 class="text-center mb-4">Details</h1>
    <div class="border border-light w-50 mx-auto p-4">
        <div class="row mb-3">
            Name: @Model.Name
        </div>
        <div class="row mb-3">
            Dojo Location: @Model.Location
        </div>
        <div class="row mb-3">
            Favorite Language: @Model.Language
        </div>
        <div class="row mb-3">
            Comments: @Model.Comment
        </div>
        <a href="/" class="btn btn-primary">Back</a>
    </div>
</div>